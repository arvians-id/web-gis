<div class="section-body">
  <h2 class="section-title">Kelurahan</h2>
  <p class="section-lead">
    Jika anda ingin membuat data Kelurahan <a href="/villages/create">Klik disini</a>.
  </p>

  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h4>Data Kelurahan</h4>
        </div>
        <div class="card-body">
          <%- include('../layouts/partials/alerts') %>
          <div class="table-responsive">
            <table class="table table-striped" id="table-1">
              <thead>
                <tr>
                  <th class="text-center">No</th>
                  <th>Kecamatan</th>
                  <th>Nama Kelurahan</th>
                  <th>Luas Kelurahan</th>
                  <th class="text-center">Warna</th>
                  <th class="text-center">Aksi</th>
                </tr>
              </thead>
              <tbody>
                <% villages.forEach((village, i) => { %>
                  <tr>
                    <td class="text-center"><%- i + 1 %></td>
                    <td><%- village.district.nama %></td>
                    <td><%- village.nama %></td>
                    <td><%- village.luas %> Km&sup2;</td>
                    <td bgcolor="<%- village.warna %>"></td>
                    <td class="text-center">
                        <a href="/villages/<%- village.id %>/edit" class="btn btn-warning btn-sm">Ubah</a>
                        <form action="/villages/<%- village.id %>?_method=DELETE" class="d-inline" method="POST" onsubmit="return confirm('Yakin ingin menghapus data ini?')">
                          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                          <button class="btn btn-danger btn-sm">Hapus</button>
                        </form>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>