<div class="section-body">
    <h2 class="section-title">Buat Data Penduduk</h2>
    <p class="section-lead">
      Jika anda ingin meilhat data Penduduk <a href="/data-populations">Klik disini</a>.
    </p>

    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h4>Buat Data Penduduk</h4>
          </div>
          <div class="card-body">
            <div class="row justify-content-center">
              <div class="col-12 col-md-8">
                <%- include('../layouts/partials/alerts') %>
              </div>
            </div>
            <form action="/data-populations/<%= dataPopulation.id %>?_method=PUT" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <div class="form-group row mb-4">
                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Kelurahan</label>
                <div class="col-sm-12 col-md-7">
                  <select class="form-control selectric" name="villageId">
                    <option value="" selected disabled>Pilih</option>
                    <% villages.forEach(village => { %>
                      <option value="<%- village.id %>" <%- dataPopulation.villageId == village.id ? 'selected' : '' %>><%- village.nama %></option>
                    <% }) %>
                  </select>
                </div>
              </div>
              <div class="form-group row mb-4">
                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Laki-laki</label>
                <div class="col-sm-12 col-md-7">
                  <input type="number" name="laki_laki" value="<%- old.laki_laki ? old.laki_laki : dataPopulation.laki_laki %>" class="form-control" placeholder="contoh: 20">
                </div>
              </div>
              <div class="form-group row mb-4">
                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Perempuan</label>
                <div class="col-sm-12 col-md-7">
                  <input type="number" name="perempuan" value="<%- old.perempuan ? old.perempuan : dataPopulation.perempuan %>" class="form-control" placeholder="contoh: 10">
                </div>
              </div>
              <div class="form-group row mb-4">
                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Latitude</label>
                <div class="col-sm-12 col-md-7">
                  <input type="text" name="latitude" value="<%- old.latitude ? old.latitude : dataPopulation.latitude %>" class="form-control" placeholder="contoh: -6.9301741">
                </div>
              </div>
              <div class="form-group row mb-4">
                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Longitude</label>
                <div class="col-sm-12 col-md-7">
                  <input type="text" name="longitude" value="<%- old.longitude ? old.longitude : dataPopulation.longitude %>" class="form-control" placeholder="contoh: 106.9159347">
                </div>
              </div>
              <div class="form-group row mb-4">
                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
                <div class="col-sm-12 col-md-7">
                  <button class="btn btn-primary">Simpan</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
</div>